<Controls:MetroWindow 
        x:Class="AC_Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls" 
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="604.018" Width="659.802" 
        ResizeMode="CanResizeWithGrip"
   >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="301*"/>
            <RowDefinition Height="272*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="AlphabetTextbox" HorizontalAlignment="Left" Height="23" Margin="170,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="70" IsEnabled="False"/>
        <Button Content="Test" HorizontalAlignment="Left" Margin="19,100,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Label Content="Alphabet:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="111,10,0,0" RenderTransformOrigin="0.737,2.308"/>
        <TextBox x:Name="StatesTextbox" HorizontalAlignment="Left" Height="23" Margin="170,46,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="23" IsEnabled="False"/>
        <Label Content="States:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="111,41,0,0" RenderTransformOrigin="0.737,2.308"/>
        <Label Content="Transition Matrices" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="263,7,0,0" RenderTransformOrigin="0.737,2.308"/>
        <TabControl x:Name="TabControlWindow" HorizontalAlignment="Left" Height="161" Margin="274,25,0,0" VerticalAlignment="Top" Width="233">
            <TabItem x:Name="TabItemWindow" Header="" HorizontalAlignment="Left" Width="31">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="87*"/>
                        <ColumnDefinition Width="140*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Height="116" TextWrapping="Wrap" VerticalAlignment="Top" Grid.ColumnSpan="2" HorizontalAlignment="Left" Width="217"/>
                </Grid>
            </TabItem>
        </TabControl>
        <Button Content="Load File" x:Name="LoaderComma" Click="LoaderComma_Click" HorizontalAlignment="Left" Margin="19,16,0,0" VerticalAlignment="Top" Width="75" Height="17"/>
        <StackPanel HorizontalAlignment="Left" Height="100" Margin="-118,169,0,0" VerticalAlignment="Top" Width="100"/>
        <TextBox x:Name="AlphabetTextbox2" HorizontalAlignment="Left" Height="23" Margin="202,151,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="70" IsEnabled="False"/>
        <Label Content="Alphabet:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="143,151,0,0" RenderTransformOrigin="0.737,2.308"/>
        <TextBox x:Name="StatesTextbox2" HorizontalAlignment="Left" Height="23" Margin="215,202,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="23" IsEnabled="False"/>
        <Label Content="States:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="156,197,0,0" RenderTransformOrigin="0.737,2.308"/>
        <Label Content="Transition Matrices" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="308,261,0,0" RenderTransformOrigin="0.737,2.308"/>
        <TabControl x:Name="TabControlWindow2" HorizontalAlignment="Left" Height="161" Margin="319,279,0,0" VerticalAlignment="Top" Width="233" Grid.RowSpan="2">
            <TabItem x:Name="TabItemWindow2" Header="" HorizontalAlignment="Left" Width="31">
                <Grid Background="#FFE5E5E5" Margin="0,0,-13,-60">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="87*"/>
                        <ColumnDefinition Width="140*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Height="176" TextWrapping="Wrap" VerticalAlignment="Top" Grid.ColumnSpan="2" HorizontalAlignment="Left" Width="216" Margin="0,0,0,-23"/>
                </Grid>
            </TabItem>
        </TabControl>
        <Label Content="Found Solution:" HorizontalAlignment="Left" Height="25" Margin="143,107,0,0" VerticalAlignment="Top" Width="113"/>
        <Button x:Name="Start" Content="Start" HorizontalAlignment="Left" Height="15" Margin="19,55,0,0" VerticalAlignment="Top" Width="75" Click="Start_Click"/>
        <TextBox x:Name="ErrorTextBox" HorizontalAlignment="Left" Height="23" Margin="393,215,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="41" IsEnabled="False"/>
        <Label Content="Error:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="334,210,0,0" RenderTransformOrigin="0.737,2.308" Height="31"/>
        <Image x:Name="toolAutomatonImage"  HorizontalAlignment="Left" Height="252" Margin="19,10,0,0" VerticalAlignment="Top" Width="274" Grid.Row="1"/>


    </Grid>
</Controls:MetroWindow>
