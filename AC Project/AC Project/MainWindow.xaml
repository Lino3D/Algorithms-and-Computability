<Controls:MetroWindow 
        x:Class="AC_Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls" 
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="604.018" Width="1049.354" 
        ResizeMode="CanResizeWithGrip"
   >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="301*"/>
            <RowDefinition Height="272*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="AlphabetTextbox" HorizontalAlignment="Left" Height="23" Margin="264,9,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="70" IsEnabled="False"/>
        <Button Content="Test" HorizontalAlignment="Left" Margin="19,255,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Label Content="Alphabet:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="206,9,0,0" RenderTransformOrigin="0.737,2.308"/>
        <TextBox x:Name="StatesTextbox" HorizontalAlignment="Left" Height="23" Margin="264,45,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="24" IsEnabled="False"/>
        <Label Content="States:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="206,40,0,0" RenderTransformOrigin="0.737,2.308"/>
        <Label Content="Transition Matrices:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="358,6,0,0" RenderTransformOrigin="0.737,2.308" FontFamily="Segoe UI Semibold" FontSize="16"/>
        <TabControl x:Name="TabControlWindow" HorizontalAlignment="Left" Height="161" Margin="368,24,0,0" VerticalAlignment="Top" Width="234">
            <TabItem x:Name="TabItemWindow" Header="" HorizontalAlignment="Left" Width="31">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="87*"/>
                        <ColumnDefinition Width="140*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Height="116" TextWrapping="Wrap" VerticalAlignment="Top" Grid.ColumnSpan="2" HorizontalAlignment="Left" Width="217"/>
                </Grid>
            </TabItem>
        </TabControl>
        <Button Content="Load File" x:Name="LoaderComma" Click="LoaderComma_Click" HorizontalAlignment="Left" Margin="19,16,0,0" VerticalAlignment="Top" Width="75" Height="17"/>
        <StackPanel HorizontalAlignment="Left" Height="100" Margin="-118,169,0,0" VerticalAlignment="Top" Width="100"/>
        <TextBox x:Name="AlphabetTextbox2" HorizontalAlignment="Left" Height="23" Margin="696,53,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="70" IsEnabled="False"/>
        <Label Content="Alphabet:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="638,53,0,0" RenderTransformOrigin="0.737,2.308"/>
        <TextBox x:Name="StatesTextbox2" HorizontalAlignment="Left" Height="23" Margin="686,98,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="24" IsEnabled="False"/>
        <Label Content="States:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="638,98,0,0" RenderTransformOrigin="0.737,2.308"/>
        <Label Content="Transition Matrices" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="638,136,0,0" RenderTransformOrigin="0.737,2.308"/>
        <TabControl x:Name="TabControlWindow2" HorizontalAlignment="Left" Height="236" Margin="654,154,0,0" VerticalAlignment="Top" Width="332" Grid.RowSpan="2">
            <TabItem x:Name="TabItemWindow2" Header="" HorizontalAlignment="Left" Width="31">
                <Grid Background="#FFE5E5E5" Margin="0,0,-12,-5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="87*"/>
                        <ColumnDefinition Width="140*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Height="192" TextWrapping="Wrap" VerticalAlignment="Top" Grid.ColumnSpan="2" HorizontalAlignment="Left" Width="315" Margin="0,0,-18,-72"/>
                </Grid>
            </TabItem>
        </TabControl>
        <Label Content="Found Solution:" HorizontalAlignment="Left" Height="30" Margin="638,7,0,0" VerticalAlignment="Top" Width="158" FontFamily="Segoe UI Semibold" FontSize="16"/>
        <Button x:Name="Start" Content="Start" HorizontalAlignment="Left" Height="15" Margin="19,210,0,0" VerticalAlignment="Top" Width="75" Click="Start_Click" IsEnabled="False"/>
        <TextBox x:Name="ErrorTextBox" HorizontalAlignment="Left" Height="23" Margin="772,98,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="40" IsEnabled="False"/>
        <Label Content="Error:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="728,98,0,0" RenderTransformOrigin="0.737,2.308" Height="31"/>
        <Image x:Name="toolAutomatonImage"  HorizontalAlignment="Left" Height="252" Margin="19,10,0,0" VerticalAlignment="Top" Width="274" Grid.Row="1"/>
        <TextBox x:Name="NumberOfWordsTextBox" DataObject.Pasting="TextBoxPasting" PreviewTextInput="PreviewTextInput" HorizontalAlignment="Left" Height="23" Margin="121,72,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="45" LostFocus="NumberOfWords_LostFocus"/>
        <Label Content="Number of words:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,72,0,0" RenderTransformOrigin="0.737,2.308"/>
        <TextBox x:Name="LengthFromTextBox" DataObject.Pasting="TextBoxPasting" PreviewTextInput="PreviewTextInput" HorizontalAlignment="Left" Height="23" Margin="108,103,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="38" LostFocus="LenghtFromTextBox_LostFocus"/>
        <Label Content="Length between" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,103,0,0" RenderTransformOrigin="0.737,2.308"/>
        <TextBox x:Name="LengthToTextBox" DataObject.Pasting="TextBoxPasting" PreviewTextInput="PreviewTextInput" HorizontalAlignment="Left" Height="23" Margin="192,103,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="40" LostFocus="LengthToTextBox_LostFocus"/>
        <Label Content="and" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="151,103,0,0" RenderTransformOrigin="0.737,2.308"/>
        <TextBox x:Name="MaxIterationsTextBox" DataObject.Pasting="TextBoxPasting" PreviewTextInput="PreviewTextInput" HorizontalAlignment="Left" Height="23" Margin="77,136,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="45" LostFocus="NumberOfIterationsTextBox_LostFocus"/>
        <Label Content="Iterations:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,136,0,0" RenderTransformOrigin="0.737,2.308"/>


    </Grid>
</Controls:MetroWindow>
